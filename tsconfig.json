{
  "compilerOptions": {
    "lib": ["ES6", "ES2017"],
    "target": "ES2017",
    "rootDir": "./src",
    "module": "commonjs",
    "outDir": "dist",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "allowJs": false,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/test/*"]
}
